            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <release>21</release>
                    <!-- üöÄ BaSui‰ºòÂåñÔºöÂêØÁî® fork ‰ª•ÂáèÂ∞ëÁºñËØëÂØπ‰∏ª JVM ÁöÑÈòªÂ°û -->
                    <fork>true</fork>
                    <showWarnings>false</showWarnings>
                    <compilerArgs>
                        <arg>-Xlint:-options</arg>
                        <arg>-Xlint:-unchecked</arg>
                        <arg>-Xlint:-deprecation</arg>
                    </compilerArgs>
                    <annotationProcessorPaths>
                        <path>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                            <version>${lombok.version}</version>
                        </path>
                        <path>
                            <groupId>org.mapstruct</groupId>
                            <artifactId>mapstruct-processor</artifactId>
                            <version>1.5.5.Final</version>
                        </path>
                    </annotationProcessorPaths>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.2.5</version>
                <configuration>
                    <!-- ÂÖàÊãºÊé• JaCoCo ÁöÑ agent,ÂÜçËøΩÂä† JVM ÈÄâÈ°π(ÈÅøÂÖçË¶ÜÁõñ JaCoCo Ê≥®ÂÖ•ÂèÇÊï∞)-->
                    <argLine>${jacocoArgLine} -XX:+EnableDynamicAgentLoading -Xshare:off</argLine>
                    <!-- ‚úÖ BaSui‰øÆÂ§çÔºöÂêØÁî®ËæìÂá∫ÈáçÂÆöÂêë‰ª•ÈÅøÂÖçÂπ∂Ë°åÊµãËØïÈÄöÈÅìÂÜ≤Á™Å -->
                    <!-- ÊµãËØïÊó•ÂøóËæìÂá∫Âà∞ target/surefire-reports/*.txt Êñá‰ª∂ÔºåÈÅøÂÖç "Corrupted channel" Ë≠¶Âëä -->
                    <redirectTestOutputToFile>true</redirectTestOutputToFile>
                    <!-- ‚úÖ BaSui‰øÆÂ§çÔºöÊøÄÊ¥ª test ProfileÔºåËÆ© DevLoggingSmsService ÁîüÊïà -->
                    <systemPropertyVariables>
                        <spring.profiles.active>test</spring.profiles.active>
                    </systemPropertyVariables>
                    <!-- üöÄ BaSui‰ºòÂåñÔºöÂ§öÊ†∏Âπ∂Ë°åÊµãËØï (1C = ÊØè‰∏™ CPU Ê†∏ÂøÉ 1 ‰∏™ JVM ËøõÁ®ã) -->
                    <forkCount>${surefire.forkCount}</forkCount>
                    <reuseForks>true</reuseForks>
                    <!-- ÂêØÁî®Âπ∂Ë°åÊµãËØïÔºöÁ±ªÁ∫ßÂà´Âπ∂Ë°åÔºàÈôêÂà∂Á∫øÁ®ãÊï∞ÈáèÔºåÈò≤Ê≠¢ÂêÉÊª°ÊâÄÊúâÊ†∏ÂøÉÔºâ -->
                    <parallel>classes</parallel>
                    <threadCount>2</threadCount>
                    <perCoreThreadCount>false</perCoreThreadCount>
                    <!-- Âú®Êú¨Âú∞/CI Êó† Docker ÁéØÂ¢ÉÊó∂,ÊéíÈô§ÈúÄË¶Å Testcontainers ÁöÑÈõÜÊàêÊµãËØï -->
                    <excludes>
                        <exclude>**/*IT.java</exclude>
                        <exclude>**/*IntegrationTest.java</exclude>
                    </excludes>
                </configuration>
            </plugin>
            <!-- Âú® verify Èò∂ÊÆµËøêË°åÈõÜÊàêÊµãËØïÔºà‰ΩøÁî® FailsafeÔºâÔºåÂèØÈÄöËøá -DskipITs=true Ë∑≥Ëøá -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>3.2.5</version>
                <configuration>
                    <skipITs>${skipITs}</skipITs>
                    <!-- ÂÖàÊãºÊé• JaCoCo ÁöÑ agentÔºåÂÜçËøΩÂä† JVM ÈÄâÈ°π -->
                    <argLine>${jacocoArgLine} -XX:+EnableDynamicAgentLoading -Xshare:off</argLine>
                    <testClassesDirectory>${project.build.testOutputDirectory}</testClassesDirectory>
                    <includes>
                        <include>**/*IT.java</include>
                        <include>**/*IntegrationTest.java</include>
                    </includes>
                    <redirectTestOutputToFile>true</redirectTestOutputToFile>
                    <!-- üöÄ BaSui‰ºòÂåñÔºöÈõÜÊàêÊµãËØï‰øùÊåÅÂçïËøõÁ®ãÔºàÈÅøÂÖç Testcontainers ËµÑÊ∫êÁ´û‰∫âÔºâ -->
                    <forkCount>${failsafe.forkCount}</forkCount>
                    <reuseForks>true</reuseForks>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                        </exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <!-- üéØ BaSui Profile: Âè™ËøêË°åÈõÜÊàêÊµãËØïÔºàË∑≥ËøáÂçïÂÖÉÊµãËØïÔºâ -->
        <profile>
