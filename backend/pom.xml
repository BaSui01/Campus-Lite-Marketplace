    <build>
        <plugins>
            <!-- ‰æùËµñÂÆâÂÖ®Êâ´ÊèèÔºöOWASP Dependency-CheckÔºàÊåâ CVSS >= 7 Â§±Ë¥•Ôºâ -->
            <plugin>
                <groupId>org.owasp</groupId>
                <artifactId>dependency-check-maven</artifactId>
                <version>10.0.4</version>
                <configuration>
                    <format>HTML</format>
                    <failBuildOnCVSS>7</failBuildOnCVSS>
                    <skipProvidedScope>true</skipProvidedScope>
                    <skipSystemScope>true</skipSystemScope>
                </configuration>
            </plugin>
            <!-- Á™ÅÂèòÊµãËØïÔºöPITÔºàËÆæÈó®ÊßõÔºå‰Ωé‰∫éÂàôÂ§±Ë¥•Ôºâ -->
            <plugin>
                <groupId>org.pitest</groupId>
                <artifactId>pitest-maven</artifactId>
                <version>1.15.5</version>
                <configuration>
                    <targetClasses>
                        <param>com.campus.marketplace.service.*</param>
                        <param>com.campus.marketplace.common.*</param>
                    </targetClasses>
                    <targetTests>
                        <param>com.campus.marketplace.service.*</param>
                        <param>com.campus.marketplace.common.*</param>
                    </targetTests>
                    <mutators>
                        <mutator>STRONGER</mutator>
                    </mutators>
                    <threads>2</threads>
                    <mutationThreshold>60</mutationThreshold>
                    <timeoutConst>8000</timeoutConst>
                    <failWhenNoMutations>false</failWhenNoMutations>
                </configuration>
            </plugin>
            <!-- JaCoCo Ë¶ÜÁõñÁéáÔºö‰∏∫ surefire/failsafe Ê≥®ÂÖ• agentÔºåverify Èò∂ÊÆµÁîüÊàêÊä•ÂëäÂπ∂Ê†°È™åÈó®Êßõ -->
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.8.11</version>
                <configuration>
                    <append>true</append>
                    <!-- ‰∏é surefire/failsafe ÂçèÂêåÔºöÂ∞Ü agent ÂèÇÊï∞Ê≥®ÂÖ•Âà∞ ${jacocoArgLine} ÂèòÈáè -->
                    <propertyName>jacocoArgLine</propertyName>
                </configuration>
                <executions>
                    <execution>
                        <id>prepare-agent</id>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>report</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>check</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>check</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <!-- Controller ÂøÖÈ°ª 85% -->
                                <rule>
                                    <element>PACKAGE</element>
                                    <includes>
                                        <include>com.campus.marketplace.controller.*</include>
                                    </includes>
                                    <limits>
                                        <limit>
                                            <counter>LINE</counter>
                                            <value>COVEREDRATIO</value>
                                            <minimum>${coverage.minimum}</minimum>
                                        </limit>
                                    </limits>
                                </rule>
                                <!-- AOP ÂøÖÈ°ª 85% -->
                                <rule>
                                    <element>PACKAGE</element>
                                    <includes>
                                        <include>com.campus.marketplace.common.aspect.*</include>
                                    </includes>
                                    <limits>
                                        <limit>
                                            <counter>LINE</counter>
                                            <value>COVEREDRATIO</value>
                                            <minimum>${coverage.minimum}</minimum>
                                        </limit>
                                    </limits>
                                </rule>
                                <!-- Service ÂÆûÁé∞ÂÖàËÆæ‰∏∫ 60%ÔºåÂêéÁª≠ÈÄêÊ≠•ÊèêÂçáËá≥ 85% -->
                                <rule>
                                    <element>PACKAGE</element>
                                    <includes>
                                        <include>com.campus.marketplace.service.impl.*</include>
                                    </includes>
                                    <limits>
                                        <limit>
                                            <counter>LINE</counter>
                                            <value>COVEREDRATIO</value>
                                            <minimum>0.60</minimum>
                                        </limit>
                                    </limits>
                                </rule>
                            </rules>
                            <!-- ÊéíÈô§‰∏çËÆ°ÂÖ•Ë¶ÜÁõñÁéáÁöÑÊ†∑Êùø‰ª£Á†Å/ÈÖçÁΩÆ/ÂÆû‰Ωì/DTO/ÂêØÂä®Á±ªÁ≠â -->
                            <excludes>
                                <exclude>**/*Application.class</exclude>
                                <exclude>com/campus/marketplace/common/config/**</exclude>
                                <exclude>com/campus/marketplace/common/dto/**</exclude>
                                <exclude>com/campus/marketplace/common/entity/**</exclude>
                                <exclude>com/campus/marketplace/common/mail/**</exclude>
                                <exclude>com/campus/marketplace/common/annotation/**</exclude>
                                <exclude>com/campus/marketplace/common/utils/**</exclude>
                                <exclude>com/campus/marketplace/websocket/**</exclude>
                            </excludes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <release>21</release>
                    <showWarnings>false</showWarnings>
                    <compilerArgs>
                        <arg>-Xlint:-options</arg>
                        <arg>-Xlint:-unchecked</arg>
                        <arg>-Xlint:-deprecation</arg>
                    </compilerArgs>
                    <annotationProcessorPaths>
                        <path>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                            <version>${lombok.version}</version>
                        </path>
                        <path>
                            <groupId>org.mapstruct</groupId>
                            <artifactId>mapstruct-processor</artifactId>
                            <version>1.5.5.Final</version>
                        </path>
                    </annotationProcessorPaths>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.2.5</version>
                <configuration>
                    <!-- ÂÖàÊãºÊé• JaCoCo ÁöÑ agentÔºåÂÜçËøΩÂä† JVM ÈÄâÈ°πÔºàÈÅøÂÖçË¶ÜÁõñ JaCoCo Ê≥®ÂÖ•ÂèÇÊï∞Ôºâ -->
                    <argLine>${jacocoArgLine} -XX:+EnableDynamicAgentLoading -Xshare:off</argLine>
                    <!-- ÈÅøÂÖçÊéßÂà∂Âè∞Â§ßÈáèËæìÂá∫Âπ∂Èôç‰ΩéÈÄöÈÅìÂπ≤Êâ∞È£éÈô© -->
                    <redirectTestOutputToFile>true</redirectTestOutputToFile>
                    <!-- ÂçïËøõÁ®ãÊâßË°å‰ª•ÂáèÂ∞ëÈÄöÈÅìÁ´û‰∫âÔºàWindows ‰∏ãÊõ¥Á®≥ÂÆöÔºâ -->
                    <forkCount>1</forkCount>
                    <reuseForks>true</reuseForks>
                    <!-- Âú®Êú¨Âú∞/CI Êó† Docker ÁéØÂ¢ÉÊó∂ÔºåÊéíÈô§ÈúÄË¶Å Testcontainers ÁöÑÈõÜÊàêÊµãËØï -->
                    <excludes>
                        <exclude>**/*IT.java</exclude>
                        <exclude>**/*IntegrationTest.java</exclude>
                    </excludes>
                </configuration>
            </plugin>
            <!-- Âú® verify Èò∂ÊÆµËøêË°åÈõÜÊàêÊµãËØïÔºà‰ΩøÁî® FailsafeÔºâÔºåÂèØÈÄöËøá -DskipITs=true Ë∑≥Ëøá -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>3.2.5</version>
                <configuration>
                    <skipITs>${skipITs}</skipITs>
                    <!-- ÂÖàÊãºÊé• JaCoCo ÁöÑ agentÔºåÂÜçËøΩÂä† JVM ÈÄâÈ°π -->
                    <argLine>${jacocoArgLine} -XX:+EnableDynamicAgentLoading -Xshare:off</argLine>
                    <includes>
                        <include>**/*IT.java</include>
                        <include>**/*IntegrationTest.java</include>
                    </includes>
                    <redirectTestOutputToFile>true</redirectTestOutputToFile>
                    <forkCount>1</forkCount>
                    <reuseForks>true</reuseForks>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                        </exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>

