    <build>
        <plugins>
            <!-- ‰æùËµñÂÆâÂÖ®Êâ´ÊèèÔºöOWASP Dependency-CheckÔºàÊåâ CVSS >= 7 Â§±Ë¥•Ôºâ -->
            <plugin>
                <groupId>org.owasp</groupId>
                <artifactId>dependency-check-maven</artifactId>
                <version>12.1.0</version>
                <configuration>
                    <formats>
                        <format>HTML</format>
                        <format>JSON</format>
                    </formats>
                    <failBuildOnCVSS>7</failBuildOnCVSS>
                    <skipProvidedScope>true</skipProvidedScope>
                    <skipSystemScope>true</skipSystemScope>
                    <!-- ÊäëÂà∂Êñá‰ª∂ÔºöÂøΩÁï•ËØØÊä•ÂíåÂ∑≤ËØÑ‰º∞ÁöÑ‰ΩéÈ£éÈô©ÊºèÊ¥û -->
                    <suppressionFiles>
                        <suppressionFile>.owasp/suppressions.xml</suppressionFile>
                    </suppressionFiles>
                    <!-- ÊÄßËÉΩ‰ºòÂåñÔºö‰ΩøÁî®ÂõΩÂÜÖ NVD Êï∞ÊçÆÂ∫ìÈïúÂÉèÂä†ÈÄüÔºàÂèØÈÄâÔºâ -->
                    <!-- <cveUrlModified>https://nvd.nist.gov/feeds/json/cve/1.1/nvdcve-1.1-modified.json.gz</cveUrlModified> -->
                    <!-- <cveUrlBase>https://nvd.nist.gov/feeds/json/cve/1.1/nvdcve-1.1-%d.json.gz</cveUrlBase> -->
                    <!-- ÁºìÂ≠ò NVD Êï∞ÊçÆÂ∫ìÔºåÈÅøÂÖçÊØèÊ¨°ÈáçÊñ∞‰∏ãËΩΩ -->
                    <autoUpdate>false</autoUpdate>
                    <!-- Âπ∂ÂèëÊâ´ÊèèÁ∫øÁ®ãÊï∞ÔºàÂä†ÈÄüÊâ´ÊèèÔºâ -->
                    <centralAnalyzerEnabled>true</centralAnalyzerEnabled>
                    <!-- Á¶ÅÁî®‰∏çÈúÄË¶ÅÁöÑÂàÜÊûêÂô®ÔºàÂáèÂ∞ëÊâ´ÊèèÊó∂Èó¥Ôºâ -->
                    <assemblyAnalyzerEnabled>false</assemblyAnalyzerEnabled>
                    <nodeAnalyzerEnabled>false</nodeAnalyzerEnabled>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.github.spotbugs</groupId>
                <artifactId>spotbugs-maven-plugin</artifactId>
                <version>4.8.3.0</version>
                <configuration>
                    <effort>max</effort>
                    <threshold>Low</threshold>
                    <failOnError>true</failOnError>
                    <xmlOutput>true</xmlOutput>
                </configuration>
                <executions>
                    <execution>
                        <phase>verify</phase>
                        <goals>
                            <goal>spotbugs</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!-- Á™ÅÂèòÊµãËØïÔºöPITÔºàËÆæÈó®ÊßõÔºå‰Ωé‰∫éÂàôÂ§±Ë¥•Ôºâ -->
            <plugin>
                <groupId>org.pitest</groupId>
                <artifactId>pitest-maven</artifactId>
                <version>1.15.5</version>
                <configuration>
                    <targetClasses>
                        <param>com.campus.marketplace.service.*</param>
                        <param>com.campus.marketplace.common.*</param>
                    </targetClasses>
                    <targetTests>
                        <param>com.campus.marketplace.service.*</param>
                        <param>com.campus.marketplace.common.*</param>
                    </targetTests>
                    <mutators>
                        <mutator>STRONGER</mutator>
                    </mutators>
                    <threads>2</threads>
                    <mutationThreshold>60</mutationThreshold>
                    <timeoutConst>8000</timeoutConst>
                    <failWhenNoMutations>false</failWhenNoMutations>
                </configuration>
            </plugin>
            <!-- JaCoCo Ë¶ÜÁõñÁéáÔºö‰∏∫ surefire/failsafe Ê≥®ÂÖ• agentÔºåverify Èò∂ÊÆµÁîüÊàêÊä•ÂëäÂπ∂Ê†°È™åÈó®Êßõ -->
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.8.11</version>
                <configuration>
                    <append>true</append>
                    <!-- ‰∏é surefire/failsafe ÂçèÂêåÔºöÂ∞Ü agent ÂèÇÊï∞Ê≥®ÂÖ•Âà∞ ${jacocoArgLine} ÂèòÈáè -->
                    <propertyName>jacocoArgLine</propertyName>
                </configuration>
                <executions>
                    <execution>
                        <id>prepare-agent</id>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>report</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>check</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>check</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <!-- Controller ÂøÖÈ°ª 85% -->
                                <rule>
                                    <element>PACKAGE</element>
                                    <includes>
                                        <include>com.campus.marketplace.controller.*</include>
                                    </includes>
                                    <limits>
                                        <limit>
                                            <counter>LINE</counter>
                                            <value>COVEREDRATIO</value>
                                            <minimum>${coverage.minimum}</minimum>
                                        </limit>
                                    </limits>
                                </rule>
                                <!-- AOP ÂøÖÈ°ª 85% -->
                                <rule>
                                    <element>PACKAGE</element>
                                    <includes>
                                        <include>com.campus.marketplace.common.aspect.*</include>
                                    </includes>
                                    <limits>
                                        <limit>
                                            <counter>LINE</counter>
                                            <value>COVEREDRATIO</value>
                                            <minimum>${coverage.minimum}</minimum>
                                        </limit>
                                    </limits>
                                </rule>
                                <!-- Service ÂÆûÁé∞ÂÖàËÆæ‰∏∫ 60%ÔºåÂêéÁª≠ÈÄêÊ≠•ÊèêÂçáËá≥ 85% -->
                                <rule>
                                    <element>PACKAGE</element>
                                    <includes>
                                        <include>com.campus.marketplace.service.impl.*</include>
                                    </includes>
                                    <limits>
                                        <limit>
                                            <counter>LINE</counter>
                                            <value>COVEREDRATIO</value>
                                            <minimum>0.60</minimum>
                                        </limit>
                                    </limits>
                                </rule>
                            </rules>
                            <!-- ÊéíÈô§‰∏çËÆ°ÂÖ•Ë¶ÜÁõñÁéáÁöÑÊ†∑Êùø‰ª£Á†Å/ÈÖçÁΩÆ/ÂÆû‰Ωì/DTO/ÂêØÂä®Á±ªÁ≠â -->
                            <excludes>
                                <exclude>**/*Application.class</exclude>
                                <exclude>com/campus/marketplace/common/config/**</exclude>
                                <exclude>com/campus/marketplace/common/dto/**</exclude>
                                <exclude>com/campus/marketplace/common/entity/**</exclude>
                                <exclude>com/campus/marketplace/common/mail/**</exclude>
                                <exclude>com/campus/marketplace/common/annotation/**</exclude>
                                <exclude>com/campus/marketplace/common/utils/**</exclude>
                                <exclude>com/campus/marketplace/websocket/**</exclude>
                            </excludes>
                        </configuration>
                    </execution>
